<Window x:Class="CodeKeeper.View.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeKeeper.View"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Preview Window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <ScrollViewer Margin="10 5" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Content}" TextWrapping="Wrap"></TextBlock>
        </ScrollViewer>
        <Button IsCancel="True" Content="Close" Height="26" Grid.Row="1" Margin="10 0"/>
    </Grid>
</Window>

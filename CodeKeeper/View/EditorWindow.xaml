<Window x:Class="CodeKeeper.View.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"                      
        xmlns:local="clr-namespace:CodeKeeper.View"
        mc:Ignorable="d"
        Title="EditorWindow" Height="450" Width="800">
    
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button 
                Command="{Binding BCmd_InsertTokenCommand}" 
                CommandParameter="{Binding SelectionStart, ElementName=tb}">Help</Button>
        </ToolBar>
        <TextBox Name="tb" AcceptsReturn="True" DataContext="{Binding CurrentSnippet}"
                 TextWrapping="Wrap" SpellCheck.IsEnabled="True"
            Text="{Binding Path=[Content], Mode=OneWay}">
        </TextBox>
    </DockPanel>
</Window>
